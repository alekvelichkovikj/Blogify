<div class='container-form'>
  <div>
    <h1>Blogify</h1>
  </div>

  <form
    class='signup-form'
    action='/signup'
    method='POST'
    enctype='multipart/form-data'
  >
    <h3>Signup Here</h3>

    <label for='username'>Choose your username</label>
    <input type='text' id='username' name='username' />

    <label for='name'>Enter your name</label>
    <input type='text' id='name' name='name' />

    <label for='bio'> Your bio</label>
    <textarea type='text' id='bio' name='bio' rows="5" cols="45"></textarea>

    <label for='email'>Enter your email</label>
    <input type='text' id='email' name='email' />

    <label for='password'>Pick a password</label>
    <input type='password' id='password' name='password' />

    <div class='file-input'>
      <input class='file' id='file' type='file' name='profile-image' />
      <label for='file'>Upload profile photo</label>
      <p class='file-name'></p>
    </div>

    <button type='submit' class='btn-form'>Sign Up</button>
    <div class='social'>
      <a href='signup.html'>
        <div>
          <i class='fab fa-google'></i>
        </div>
      </a>
      <a href=''>
        <div class='fb'>
          <i class='fab fa-facebook'></i>
        </div>
      </a>
    </div>
  </form>
</div>

{{#if errorMessage}}
  <div class='alert'>
    <span
      class='closebtn'
      onclick="this.parentElement.style.display='none';"
    >&times;</span>
    {{errorMessage}}
  </div>
{{/if}}