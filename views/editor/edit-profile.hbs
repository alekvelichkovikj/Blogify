<div class='container-form'>
  <form action='/profile/edit' method='POST' enctype='multipart/form-data'>
    <h4>Edit profile</h4>

    <div class='edit-image'>
      {{#if imageUrl}}
        <img src='{{imageUrl}}' alt='profile image' height='250px' />
      {{else}}
        <img
          height='250px'
          src='https://source.unsplash.com/random/800x600'
          alt='profile image'
        />
      {{/if}}
    </div>

    <label for='username'>Your username</label>
    <input
      type='text'
      id='username'
      name='username'
      value='{{username}}'
      readonly
    />

    <label for='name'>Enter your name</label>
    <input type='text' id='name' name='name' value='{{name}}'/>

    <label for='bio'> Your bio</label>
    <textarea type='text' id='bio' name='bio' rows="5" cols="45">{{bio}}</textarea>

    <label for='email'>Enter your email</label>
    <input type='text' id='email' name='email' value='{{email}}' />

    <label for='password'>Change password</label>
    <input type='password' id='password' name='password' />

    <div class='file-input'>
      <input class='file' id='file' type='file' name='profile-image' />
      <label for='file'>Change profile photo</label>
      <p class='file-name'></p>
    </div>

    <button
      style='display: inline;'
      type='submit'
      class='btn-form'
    >Save</button>

  </form>
</div>

{{#if errorMessage}}
  <div class='alert'>
    <span
      class='closebtn'
      onclick="this.parentElement.style.display='none';"
    >&times;</span>
    {{errorMessage}}
  </div>
{{/if}}