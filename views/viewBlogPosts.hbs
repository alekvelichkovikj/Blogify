<nav class='nav'>
  <div class='nav-container'>
    <a href='/'><h1>Blogify</h1></a>
    {{#if user}}
      <ul>
        <li><a href='/profile'>My Profile</a></li>
        <li><a href='/logout' class='btn-logout'>Log Out</a></li>
      </ul>
    {{/if}}
  </div>
</nav>

<div class='grid-container'>
  {{#each post}}
    <div class='blog-box'>
      <h4>{{title}}</h4>
      <div class='ellipsis'>
        {{{content}}}
      </div>
      <div>
        {{#with editorId}}
          <p>Written by: {{username}}</p>
        {{/with}}
        <a class='btn-dark' href='/details/{{_id}}'><span>Read More</span></a>
      </div>
    </div>
  {{/each}}
</div>

<footer id='main-footer' class='text-center p-4'>
  <div class='footer-content'>
    <p>&copy; <span id='year'></span> Blogify</p>
  </div>
</footer>