<nav class='nav'>
  <div class='nav-container'>
    <a href='/'><h1>Blogify</h1></a>
    {{#if user}}
    <ul>
      <li><a href='/profile'>My Profile</a></li>
      <li><a href='/logout' class='btn-logout'>Log Out</a></li>
    </ul>
    {{/if}}
  </div>
</nav>

<div>
  {{#with post}}
    <div class='details-container'>
      <div>
        <h1>{{title}}</h1>
      </div>

      <div>
        <p>{{{content}}}</p>
      </div>

      <div class='details-author'>
        {{#with editorId}}
          <div>
            <h3>
              Written by:
              {{username}}
            </h3>
          </div>
        {{/with}}
  {{/with}}
  
        <div>

          {{#if user}}
            <a class='btn-dark' href='/edit/{{post._id}}'>Edit Post</a>
            <a class='btn-logout' href='/details/delete/{{post._id}}'>Delete Post</a>          
          {{/if}}


        </div>

      </div>
      <a class='btn-red' href='/view'><span>View Blog Page</span></a>
    </div>

  
</div>


<footer id='main-footer' class='text-center p-4'>
  <div class='footer-content'>
    <p>&copy; <span id='year'></span> Blogify</p>
  </div>
</footer>
